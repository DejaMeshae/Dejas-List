            @Html.DisplayFor(modelItem => item.Contractor.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeOfProject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeOfProject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Budget)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.JobsId }) |
            @Html.ActionLink("Details", "Details", new { id=item.JobsId }) |
