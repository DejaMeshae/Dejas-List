@model IEnumerable<DejasList.Models.Jobs>

@{
    ViewBag.Title = "Jobs";
}

<h2>Jobs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contractor.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfProject)
        </th>
